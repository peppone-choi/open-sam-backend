# Node Environment
NODE_ENV=development

# Server
PORT=8080
HOSTNAME=localhost
SERVER_ID=sangokushi_default
SERVER_NAME=OpenSAM
SERVER_HIDDEN_SEED=opensam_hidden_seed
SERVER_SEASON_INDEX=0
SESSION_IDENTITY_CACHE_TTL=600

# MongoDB
MONGODB_URI=mongodb://localhost:27017/opensam

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-secret-key-change-this-in-production

# Session
SESSION_SECRET=your-session-secret-change-this
SESSION_STORE=redis # redis | mongo
SESSION_COLLECTION=sessions
SESSION_COOKIE_MAX_AGE=86400000
SESSION_TTL_SECONDS=86400
SESSION_REDIS_PREFIX=opensam:sess:
SESSION_COOKIE_NAME=opensam.sid
SESSION_DISABLE_PERSISTENCE=false
SESSION_AUTOREMOVE_INTERVAL=10
SESSION_MONGO_URI=
DEFAULT_SESSION_ID=sangokushi_default

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Cookie settings
COOKIE_SAMESITE=lax
COOKIE_SECURE=false
# COOKIE_DOMAIN=localhost  # Uncomment for production with specific domain

# CORS (fallback for direct API access)
CORS_ORIGIN=http://localhost:3000

# Legacy 전투 파이프라인
ENABLE_LEGACY_PROCESS_WAR=true
# 강제로 자동 전투만 사용하려면 true
FORCE_AUTO_BATTLE=false
