{
  "name": "open-sam-backend",
  "version": "1.0.0",
  "description": "Express.js + TypeScript + MongoDB + CQRS",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:daemon": "ts-node-dev --respawn --transpile-only src/daemon.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:daemon": "node dist/daemon.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "mongoose": "^8.19.2",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/node": "^20.11.0",
    "@types/node-cache": "^4.1.3",
    "@types/node-cron": "^3.0.11",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
